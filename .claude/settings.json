{
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(git status)",
      "Bash(git status:*)",
      "Bash(git diff)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(uv:*)",
      "Bash(python:*)",
      "Bash(pytest:*)",
      "Bash(pyrefly:*)",
      "Bash(ruff:*)",
      "Bash(cat:*)",
      "Bash(wc:*)",
      "Bash(ls:*)",
      "Bash(dir:*)",
      "Bash(findstr:*)",
      "Bash(test:*)",
      "Bash(type:*)",
      "Bash(playwright:*)",
      "Read(./**/*.py)",
      "Read(./**/*.ipynb)",
      "Read(./**/*.md)",
      "Read(./**/*.txt)",
      "Read(./**/*.json)",
      "Read(./**/*.toml)",
      "Read(./**/*.yaml)",
      "Read(./**/*.yml)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Bash(pip:*)",
      "Bash(pip install:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(ssh:*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./**/.env)",
      "Read(./**/credentials*)",
      "Read(./**/secrets*)"
    ]
  },
  "project": {
    "name": "kenp0m-sp0rts-analyzer",
    "description": "KenPom advanced analytics platform for NCAA Division I Men's Basketball research and statistical modeling",
    "type": "python",
    "python_version": "3.11"
  },
  "preferences": {
    "coding_style": {
      "max_line_length": 88,
      "use_type_hints": true,
      "docstring_style": "google",
      "import_style": "isort"
    },
    "testing": {
      "framework": "pytest",
      "min_coverage": 80
    },
    "formatting": {
      "tool": "ruff",
      "on_save": true
    }
  },
  "context": {
    "primary_files": [
      "CLAUDE.md",
      "README.md",
      "pyproject.toml"
    ],
    "key_directories": [
      "src/kenp0m_sp0rts_analyzer",
      "tests",
      "examples"
    ]
  },
  "external_resources": {
    "kenpom": {
      "website": "https://kenpom.com/",
      "documentation": "https://kenpompy.readthedocs.io/",
      "requires_subscription": true
    }
  },
  "environment_variables": {
    "required_for_api": [
      "KENPOM_API_KEY"
    ],
    "required_for_scraper": [
      "KENPOM_EMAIL",
      "KENPOM_PASSWORD"
    ],
    "optional": [
      "KENPOM_CACHE_DIR",
      "LOG_LEVEL"
    ]
  }
}
